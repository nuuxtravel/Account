    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        function loadPage(pageName, element) {
            var contentArea = document.getElementById('content-area');
            var pageTitle = document.getElementById('page-title');
            var loadingOverlay = document.getElementById('loading-overlay');

            loadingOverlay.style.display = 'flex';
            contentArea.innerHTML = ''; 

            google.script.run
                .withSuccessHandler(function(htmlContent) {
                    loadingOverlay.style.display = 'none';
                    contentArea.innerHTML = htmlContent;
                    pageTitle.textContent = pageName.replace(/([A-Z])/g, ' $1').trim();

                    if (element) {
                        var links = document.querySelectorAll('.sidebar-menu .nav-link');
                        links.forEach(link => link.classList.remove('active'));
                        element.classList.add('active');
                    }
                })
                .withFailureHandler(function(error) {
                    loadingOverlay.style.display = 'none';
                    Swal.fire('Error', 'Failed to load page: ' + error.message, 'error');
                })
                .getHtmlContent(pageName);
        }

        document.addEventListener('DOMContentLoaded', function() {
            loadPage('Dashboard', document.querySelector('.sidebar-menu .nav-link.active'));
        });
    </script>
</body>
</html>
